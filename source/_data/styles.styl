.content-wrap {
  opacity: 0.9;
  background: rgba(255,255,255,0.9);
}

//侧边框的透明度设置
.sidebar {
  opacity: 0.9;
}

//菜单栏的透明度设置
.header-inner {
  background: rgba(255,255,255,0.9);
}

.footer-inner {
  background: rgba(255,255,255,0.9);
}

//搜索框（local-search）的透明度设置
