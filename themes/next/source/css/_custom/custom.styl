//博客内容透明化
//文章内容的透明度设置
.content-wrap {
  opacity: 0.9;
  background: rgba(255,255,255,0.9);
}

//侧边框的透明度设置
.sidebar {
  opacity: 0.9;
}

//菜单栏的透明度设置
.header-inner {
  background: rgba(255,255,255,0.9);
}

.footer-inner {
  background: rgba(255,255,255,0.9);
}

//搜索框（local-search）的透明度设置
.popup {
  opacity: 0.9;
}

//主页文章添加阴影效果 好像没有效果
.post {
  margin-top: 60px;
  margin-bottom: 60px;
  padding: 25px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

//夜间模式使用的css
.white-fg {
  color: #CCCCCC;   
  li, a {
      color: #CCCCCC;
  } 
}

.black-bg {
  background: rgba(0, 0, 0, 0.9);    
}

body {
  background-image: -webkit-cross-fade(url("/images/background.png"), url("/images/black.jpg"), 0%);
  // background-image: -webkit-cross-fade(url("https://gitee.com/zhou-zikun/hulieu-image/raw/master/saber.jpg"), url("/images/black.jpg"), 0%);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: 50% 50%;
}

.page-head{
}

.index-head-image {
  position: relative;
  width: 100%;
  height: 100%;  
  // height: auto;
  background-size: cover;
}

.index-head-image img{
  position: relative;
  top: 0;  
  // width: 100%;
  // height: 100%;  
}

.index-head-image span{
  position: absolute;
  top: 85%;
  left: 50%;  
  width: 100%;
  transform:translate(-50%, 0%);
}

@-webkit-keyframes twinkling{	
	0%{
		opacity:0;			
	}
  30%{
    opacity:0.7;
  }
  70%{
		opacity:1;				
	}
	100%{
		opacity:0;			
	}
}

.index-head-image .arrow-down {
  border-left: 1.5vw solid #DDBBBB;
  border-bottom: 1.5vw solid #DDBBBB;
  // border-right: 4px solid transparent;
  // border-top: 4px solid transparent;

  // height: 7%; // 为保证宽高一致，需要padding top
  padding-top: 7%;
  width: 7%;
  display: inline-block;
  transform: translate(-50%, -50%) rotate(-45deg);
  -webkit-animation: twinkling 2s infinite ease-in-out;
}
